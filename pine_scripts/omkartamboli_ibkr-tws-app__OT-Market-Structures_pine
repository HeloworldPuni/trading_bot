// PnL Statistics Tracking (Confirmed OB+FVG only)
var float totalPnL = 0.0
var int totalTrades = 0
var int tpHits = 0
var int slHits = 0
var float totalWinAmount = 0.0
var float totalLossAmount = 0.0

// Duration and bar tracking
var int firstTradeTime = na          // Timestamp of first trade (milliseconds)
var int lastTradeTime = na           // Timestamp of last trade (milliseconds)
var int totalBarsInTrades = 0        // Total bars across all trades
var int totalBarsInWins = 0          // Total bars in winning trades
