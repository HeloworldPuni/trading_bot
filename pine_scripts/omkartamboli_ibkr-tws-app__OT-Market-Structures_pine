// Calculate moving averages
ema200 = ta.ema(close, 200)
ema100 = ta.ema(close, 100)
ema50 = ta.ema(close, 50)
vwapValue = ta.vwap(close)

// Volume calculation for MA_Score
avgVolume21 = ta.sma(volume, 21)

