    label.new(bar_index, high, "ðŸ“°", style=label.style_label_down, color=color.new(color.blue, 20), 
              textcolor=color.white, size=size.small)

if whaleActivity and barstate.isconfirmed
    whaleText = whaleAccumulation ? "ðŸ‹â†—" : whaleMomentum ? "ðŸ‹âš¡" : "ðŸ‹â†˜"
    label.new(bar_index, high, whaleText, style=label.style_label_down, color=color.new(color.purple, 30), 
              textcolor=color.white, size=size.small)

if dipRecovery and barstate.isconfirmed
    label.new(bar_index, low, "ðŸ“ˆ", style=label.style_label_up, color=color.new(color.green, 30), 
              textcolor=color.white, size=size.small)

